{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "rootDirs": ["."],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@stories/*": ["stories/*"],
      "@gfe/ge-components": ["src"],
      "@gfe/ge-components/dist/es/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "stories/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
